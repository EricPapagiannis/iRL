<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_health_care_prov_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.rlsolutions.irl.HealthCareProvDashboardActivity">


    <TextView android:id="@+id/patient_list"
        android:textSize="20dp"
        android:maxLines = "100"
        android:scrollbars = "vertical"
        android:text="You have no patients"
        android:layout_alignParentLeft="true"
        android:layout_height="250dp"
        android:layout_width="200dp"
        android:layout_alignTop="@+id/delete_button"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_below="@+id/enter_email"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:id="@+id/imageButton2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="clickSearch"/>

    <Button
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/delete_button"
        android:layout_alignParentEnd="true" />

    <EditText android:id="@+id/enter_email"
        android:layout_height="wrap_content"
        android:hint="Search by username"
        android:layout_width="250dp"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

    <TextView
        android:text="Select a client first"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Latest messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/textView2" />


</RelativeLayout>
